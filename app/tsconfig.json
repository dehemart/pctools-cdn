{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "Node16",
    "rootDir": "src",
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "src/utils/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@logger/*": [
        "src/server/logger/*"
      ],
      "@middlewares/*": [
        "src/adapters/inbounds/api/middlewares/*"
      ],
      "@validators/*": [
        "src/adapters/inbounds/api/validators/*"
      ],
      "@controllers/*": [
        "src/adapters/inbounds/api/controllers/*"
      ],
      "@clients/*": [
        "src/adapters/outbounds/clients/*"
      ],
      "@users/*": [
        "src/domain/users/*"
      ],
      "@login/*": [
        "src/domain/login/*"
      ]
    },
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "types": [
      "express"
    ],
    "declaration": true,
    "declarationDir": "./src/@types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts"
  ]
}